---
title: トップページ
description: ページ概要がはいります。
---
{% extends 'base.njk' %}

{% block main -%}
<!-- Icons Grid (section1) -->
  <section class="features-icons bg-light text-center">
    <div class="container">
      <div class="row">
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-screen-desktop m-auto text-primary"></i>
            </div>
            <h3>{{ site.section1.point1.title }}</h3>
            <p class="lead mb-0">{{ site.section1.point1.description }}</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-5 mb-lg-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-layers m-auto text-primary"></i>
            </div>
            <h3>{{ site.section1.point2.title }}</h3>
            <p class="lead mb-0">{{ site.section1.point2.description }}</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="features-icons-item mx-auto mb-0 mb-lg-3">
            <div class="features-icons-icon d-flex">
              <i class="icon-check m-auto text-primary"></i>
            </div>
            <h3>{{ site.section1.point3.title }}</h3>
            <p class="lead mb-0">{{ site.section1.point3.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Image Showcases (section2)-->
  <section class="showcase">
    <div class="container-fluid p-0">
      <div class="row no-gutters">

        <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('img/bg-showcase-1.jpg');"></div>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text">
          <h2>{{ site.section2.point1.title }}</h2>
          <p class="lead mb-0">{{ site.section2.point1.description }}</p>
        </div>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6 text-white showcase-img" style="background-image: url('img/bg-showcase-2.jpg');"></div>
        <div class="col-lg-6 my-auto showcase-text">
          <h2>{{ site.section2.point2.title }}</h2>
          <p class="lead mb-0">{{ site.section2.point2.description }}</p>
        </div>
      </div>
      <div class="row no-gutters">
        <div class="col-lg-6 order-lg-2 text-white showcase-img" style="background-image: url('img/bg-showcase-3.jpg');"></div>
        <div class="col-lg-6 order-lg-1 my-auto showcase-text">
          <h2>{{ site.section2.point3.title }}</h2>
          <p class="lead mb-0">{{ site.section2.point3.description }}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials (section3)-->
  <section class="testimonials text-center bg-light">
    <div class="container">
      <h2 class="mb-5">{{ site.section3.message }}</h2>
      <div class="row">
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <img class="img-fluid rounded-circle mb-3" src="img/testimonials-1.jpg" alt="">
            <h5>{{ site.section3.member1.name }}</h5>
            <p class="font-weight-light mb-0">{{ site.section3.member1.saying }}</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <img class="img-fluid rounded-circle mb-3" src="img/testimonials-2.jpg" alt="">
            <h5>{{ site.section3.member2.name }}</h5>
            <p class="font-weight-light mb-0">{{ site.section3.member2.saying }}</p>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="testimonial-item mx-auto mb-5 mb-lg-0">
            <img class="img-fluid rounded-circle mb-3" src="img/testimonials-3.jpg" alt="">
            <h5>{{ site.section3.member3.name }}</h5>
            <p class="font-weight-light mb-0">{{ site.section3.member3.saying }}</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action (section4)-->
  <section class="call-to-action text-white text-center">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-xl-9 mx-auto">
          <h2 class="mb-4">{{ site.section4.message }}</h2>
        </div>
        <div class="col-md-10 col-lg-8 col-xl-7 mx-auto">
          <form>
            <div class="form-row">
              <div class="col-12 col-md-4 offset-md-4">
                <button type="submit" class="btn btn-block btn-lg btn-primary">BUtton</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </section>
{%- endblock %}